pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        INSTANCE_NAME = 'MyJenkinsEC2cloudformation'  // You can customize this
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Deploy EC2 via CloudFormation') {
            steps {
                withCredentials([[
                    $class: 'UsernamePasswordMultiBinding',
                    credentialsId: 'aws_s3_cloudformationdemo',
                    usernameVariable: 'AWS_ACCESS_KEY_ID',
                    passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                ]]) {
                    sh '''
                        echo "Configuring AWS CLI..."
                        aws configure set aws_access_key_id $AWS_ACCESS_KEY_ID
                        aws configure set aws_secret_access_key $AWS_SECRET_ACCESS_KEY
                        aws configure set default.region $AWS_REGION

                        echo "Deploying EC2 CloudFormation Stack..."
                        aws cloudformation deploy \
                          --stack-name MyEC2InstanceStack \
                          --template-file "AWS Cloudformation Templates/02_ec2cft.yml" \
                          --capabilities CAPABILITY_NAMED_IAM \
                          --parameter-overrides InstanceName=$INSTANCE_NAME
                    '''
                }
            }
        }
    }
}

